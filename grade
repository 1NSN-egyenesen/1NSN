#!/bin/bash

cp -r /home/1NSN/scriptek/sources.list /etc/apt/sources.list

apt update -y
apt upgrade -y

apt install lxpanel -y
apt install pcmanfm -y

apt install kodi -y
apt install qbittorrent -y 
apt install yt-dlp -y

rm -r /live/image/live/95-update_latest.squashfs
rm -r /mnt/live/memory/changes/upperdir/mnt
rm -r /mnt/live/memory/changes/upperdir/home/puppy/.cache
rm -r /mnt/live/memory/changes/upperdir/root/.cache
rm -r /mnt/live/memory/changes/upperdir/tmp
rm -r /mnt/live/memory/changes/upperdir/var/cache/apt

mkdir -p /root/tint2launchers

cp -r /home/1NSN/scriptek/kodi.desktop /root/tint2launchers
cp -r /home/1NSN/scriptek/org.qbittorrent.qBittorrent.desktop /root/tint2launchers
echo ""
echo "Használatlan függőségek törlése..."
echo ""
apt autoremove
echo ""
echo "*************Script by .:1NSN:.**************************"
echo "A hordozható verzió elkészítése,kérlek légy türelemmel..."
echo "*********************************************************"
echo ""
mksquashfs /mnt/live/memory/changes/upperdir /live/image/live/95-update_latest.squashfs -comp zstd

reboot
