kész#!/bin/sh


DIALOG_CANCEL=1
DIALOG_ESC=255
HEIGHT=0
WIDTH=0

display_result() {
  dialog --title "$1" \
    --no-collapse \
    --msgbox "$result" 0 0
}

while true; do
  exec 3>&1
  selection=$(dialog \
    --backtitle "1NSN Script			Rendszer és App letolto script" \
    --title "Menu" \
    --clear \
    --cancel-label "Kilépés" \
    --menu "Kerlek valassz rendszert:" $HEIGHT $WIDTH 4 \
    "1" "Wine" \
    "2" "Epito" \
    "3" "Brave - konfig" \
    "4" "Ventoy" \
    "5" "Avidemux" \
    "6" "Daedalus - összes komp" \
    "7" "Brave - legutolsó" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo "Program terminated."
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo "Program aborted." >&2
      exit 1
      ;;
  esac
  case $selection in
    0 )
      clear
      echo "Program terminated."
      ;;
    1 )
      result=$(
wget -O /live/image/live/98-wine_8.0_Repack4.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/app/98-wine_8.0_Repack4.squashfs/download

)
      display_result ""
      ;;
    2 )
      result=$(
rm -r /bin/builder
wget -O /tmp/builder https://raw.githubusercontent.com/1NSN-egyenesen/1NSN/main/daedalus
chmod 777 /tmp/builder

)
      display_result ""
      ;;
      
   3 )
      result=$(
rm -r /live/image/image/04-brave_puppy.squashfs
wget -O /live/image/live/04-brave_puppy.squashfs/download https://sourceforge.net/projects/egyenesenfatdog64/files/app/04-brave_puppy.squashfs/download

)
      display_result "Letöltés kész! Indítsd újra a rendszert!"
      ;;  
    
    4 )
      result=$(
wget -O /live/image/live/12-ventoy_1.0.77.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/app/12-ventoy_1.0.77.squashfs/download

)
    display_result ""
      ;;  
     
    5 )
      result=$(
wget -O /live/image/live/11-avidemux_2.8_all_deb.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/app/11-avidemux_2.8_all_deb.squashfs/download

)
    display_result ""
      ;;  
     
     
     6 )
      result=$(
cd /live/image/live
rm *filesystem.squashfs
rm *conf.squashfs
rm *initrd1.xz
rm *vmlinuz1
rm *amd64.squashfs
rm *live.squashfs

wget -O /live/image/live/01-daedalus-tint2-filesystem.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/Daedalus/01-daedalus-tint2-filesystem.squashfs/download
wget -O /live/image/live/02-1nsn-conf.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/Daedalus/02-1nsn-conf.squashfs/download
wget -O /live/image/live/initrd1.xz https://sourceforge.net/projects/egyenesenfatdog64/files/Daedalus/initrd1.xz/download
wget -O /live/image/live/vmlinuz1 https://sourceforge.net/projects/egyenesenfatdog64/files/Daedalus/vmlinuz1/download
wget -O /live/image/live/k-5.4.147-amd64.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/Daedalus/k-5.4.147-amd64.squashfs/download
wget -O /live/image/live/99-firmware-bullseye-live.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/Daedalus/99-firmware-bullseye-live.squashfs/download
)
     display_result ""
      ;;  
     
     7 )
      result=$(
rm -r /live/image/live/03-brave-browser_latest.squashfs
wget -O /live/image/live/03-brave-browser_latest.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/app/03-brave-browser_latest.squashfs/download
)
     display_result "Letöltve! Indítsd újra a rendszert!"
      ;;  
     
     
     esac
done

