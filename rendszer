#!/bin/sh
# while-menu-dialog: a menu driven system information program

# while-menu-dialog: a menu driven system information program

DIALOG_CANCEL=1
DIALOG_ESC=255
HEIGHT=0
WIDTH=0

display_result() {
  dialog --title "$1" \
    --no-collapse \
    --msgbox "$result" 0 0
}

while true; do
  exec 3>&1
  selection=$(dialog \
    --backtitle "1NSN Script			Rendszer letolto script" \
    --title "Menu" \
    --clear \
    --cancel-label "Kilépés" \
    --menu "Kerlek valassz rendszert:" $HEIGHT $WIDTH 4 \
    "1" "Stretch" \
    "2" "Sid" \
    "3" "Ceres" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo "Program terminated."
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo "Program aborted." >&2
      exit 1
      ;;
  esac
  case $selection in
    0 )
      clear
      echo "Program terminated."
      ;;
    1 )
      result=$(
cd /mnt/sda1
mkdir live
mv casper live
cd live
rm *filesystem.squashfs

wget -O /mnt/sda1/live/01-filesystem.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/Stretch64/01-filesystem.squashfs/download

)
      display_result ""
      ;;
    2 )
      result=$(
cd /mnt/sda1
mkdir live
mv casper live
cd live
rm *filesystem.squashfs

wget -O /mnt/sda1/live/01-filesystem.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/Sid/01-filesystem.squashfs/download
wget -O /mnt/sda1/live/02-1nsn-conf.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/Sid/02-1nsn-conf.squashfs/download
)
      display_result ""
      ;;
      
    3 )
      result=$(
cd /mnt/sda1
mkdir live
mv casper live
cd live
rm *filesystem.squashfs

wget -O /mnt/sda1/live/01-filesystem-1nsn-skeleton-ceres-unofficial.squashfs https://sourceforge.net/projects/egyenesenfatdog64/files/ceres/01-filesystem-1nsn-skeleton-ceres-unofficial.squashfs/download

)
      display_result ""
      ;;
      
    
     esac
done
