#!/bin/bash
echo ""
echo "Brave-Browser-Stable telepítés..."
echo "**********************************"
apt install brave-browser -y
echo ""
echo "fájlok másolása..."
echo "*******************************************"
mkdir -p /tmp/xxx/opt
mkdir -p /tmp/xxx/bin
mkdir -p /tmp/xxx/usr/bin
mkdir -p /tmp/xxx/usr/lib
mkdir -p /tmp/xxx/usr/share/applications
mkdir -p /tmp/xxx/usr/share/icons
mkdir -p /tmp/xxx/var/lib/apt
mkdir -p /tmp/xxx/var/lib/dpkg
mkdir -p /tmp/xxx/var/log/apt

cp -r /opt /tmp/xxx/opt
rm -r /mnt/live/memory/changes/upperdir/var/cache
rm -r /mnt/live/memory/changes/upperdir/tmp
rm -r /mnt/live/memory/changes/upperdir/live

rm -r /live/image/live/07-brave-nightly_latest.squashfs
rm -r /live/image/live/03-brave_stabil_latest.squashfs

echo ""
echo "Hordozható verzió tömörítése..."
echo "*******************************"
mksquashfs /mnt/live/memory/changes/upperdir /live/image/live/03-brave_stabil_latest.squashfs
echo ""
echo "Újraindítás..."
echo "**************"
reboot
