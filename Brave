#!/bin/bash
echo ""
echo "Brave-Browser-Stable telepítés..."
echo "**********************************"
apt install brave-browser -y
echo ""
echo "Fájlok másolása..."
echo "*******************************************"
mkdir -p /tmp/xxx/opt
mkdir -p /tmp/xxx/bin
mkdir -p /tmp/xxx/usr/bin
mkdir -p /tmp/xxx/usr/lib
mkdir -p /tmp/xxx/usr/share/applications
mkdir -p /tmp/xxx/usr/share/icons

cp -r /mnt/live/memory/changes/upperdir/opt /tmp/xxx
cp -r /mnt/live/memory/changes/upperdir/bin /tmp/xxx/bin
cp -r /mnt/live/memory/changes/upperdir/usr/bin /tmp/xxx/usr/bin
cp -r /mnt/live/memory/changes/upperdir/usr/lib/ /tmp/xxx/usr/lib
cp -r /mnt/live/memory/changes/upperdir/usr/share/applications /tmp/xxx/usr/share/applications
cp -r /mnt/live/memory/changes/upperdir/usr/share/icons /tmp/xxx/usr/share/icons

rm -r /live/image/live/07-brave-nightly_latest.squashfs
rm -r /live/image/live/03-brave_stabil_latest.squashfs

echo ""
echo "Hordozható verzió tömörítése..."
echo "*******************************"
mksquashfs /tmp/xxx /live/image/live/03-brave_stabil_latest.squashfs
echo ""
echo "Újraindítás..."
echo "**************"
reboot
